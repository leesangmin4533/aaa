{
  "module": "sales_analysis",
  "task": "extract_sales_dataset_ssv",
  "entry": "main.py",
  "desc": "매출분석 > 중분류별 매출 구성 메뉴 진입 후, Network 응답 중 selDetailSearch 포함된 요청의 SSV 응답을 저장하고 파싱함",
  "behavior": [
    {
      "action": "navigate_menu",
      "menu_path": ["매출분석", "중분류별 매출 구성"]
    },
      {
        "action": "click",
        "target_xpath": "//*[@id='mainframe.HFrameSet00.VFrameSet00.FrameSet.STMB011_M0.form.div_workForm.form.div2.form.gdList.body.gridrow_0.cell_0_0']",
        "log": "✅ 중분류 코드 001 클릭"
      },
      {
        "action": "click",
        "target_xpath": "//*[@id='mainframe.HFrameSet00.VFrameSet00.FrameSet.STMB011_M0.form.div_workForm.form.div2.form.gdList.body.gridrow_0.cell_0_0:text']",
        "log": "✅ 중분류 코드 001 클릭 완료"
      },
      {
        "action": "sleep",
        "seconds": 1.5
      },
      {
        "action": "extract_network_response",
      "match": "selDetailSearch",
      "save_to": "output/category_001_detail.txt",
      "log": "✅ selDetailSearch 응답 SSV 저장 완료"
    },
    {
      "action": "parse_ssv",
      "input": "output/category_001_detail.txt",
      "filter": {
        "STOCK_QTY": "0"
      },
      "fields": ["ITEM_CD", "ITEM_NM", "STOCK_QTY"],
      "save_to": "output/category_001_filtered.txt",
      "log": "✅ 재고 0건 필터링 저장 완료"
    }
  ]
}
